FROM node:20-bullseye-slim AS ui-builder

WORKDIR /ui

COPY classiflow-ui/package.json classiflow-ui/package-lock.json /ui/
RUN npm ci

COPY classiflow-ui/ /ui/
RUN npm run build

FROM python:3.11-slim

ARG EXTRAS="ui"

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PIP_NO_CACHE_DIR=1 \
    MPLBACKEND=Agg

RUN apt-get update \
    && apt-get install -y --no-install-recommends \
        libgomp1 \
        libglib2.0-0 \
        libgl1 \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

COPY pyproject.toml README.md LICENSE CHANGELOG.md CITATION.cff /app/
COPY src /app/src

RUN pip install --upgrade pip \
    && pip install ".[${EXTRAS}]"

COPY --from=ui-builder /ui/dist /opt/classiflow/ui

RUN mkdir -p /data/.classiflow \
    && adduser --disabled-password --gecos "" appuser \
    && chown -R appuser:appuser /data

USER appuser

EXPOSE 8765

CMD ["classiflow", "ui", "serve", "--projects-root", "/data/projects", "--db-path", "/data/.classiflow/ui.db", "--host", "0.0.0.0", "--port", "8765", "--static-dir", "/opt/classiflow/ui"]
